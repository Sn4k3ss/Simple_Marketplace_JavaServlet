<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>TIW_2021project</display-name>


    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://aws-db1.cq19dtt44nal.eu-south-1.rds.amazonaws.com:3306/tiw_2021project?useSSL=false</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>intellij</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>intellij1234</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>s3tiwBucket</param-name>
        <param-value>https://tiw21marketplace.s3.eu-south-1.amazonaws.com/</param-value>
    </context-param>


    <filter>
        <filter-name>SessionChecker</filter-name>
        <filter-class>com.ss.TIW_2021project.web.filter.SessionChecker</filter-class>
    </filter>
    <filter>
        <filter-name>CheckNotLoggedUser</filter-name>
        <filter-class>com.ss.TIW_2021project.web.filter.CheckNotLoggedUser</filter-class>
    </filter>
    <filter>
        <filter-name>NoCacher</filter-name>
        <filter-class>com.ss.TIW_2021project.web.filter.NoCacher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>NoCacher</filter-name>
        <url-pattern>/login.html</url-pattern>
        <url-pattern>/home.html</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CheckNotLoggedUser</filter-name>
        <url-pattern>/login.html</url-pattern>
        <url-pattern>/GoToLogin</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/signup</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SessionChecker</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/home.html</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/GoToHome</url-pattern>
        <url-pattern>/GoToShoppingCart</url-pattern>
        <url-pattern>/GoToOrders</url-pattern>
        <url-pattern>/search/*</url-pattern>
        <url-pattern>/AddToCart</url-pattern>
        <url-pattern>/PlaceOrder</url-pattern>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>