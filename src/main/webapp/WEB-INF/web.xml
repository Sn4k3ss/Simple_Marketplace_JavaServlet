<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>TIW_2021project</display-name>


    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://aws-db1.cq19dtt44nal.eu-south-1.rds.amazonaws.com:3306/tiw_2021project?useSSL=false</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>intellij</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>intellij1234</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>s3tiwBucket</param-name>
        <param-value>https://tiw21marketplace.s3.eu-south-1.amazonaws.com/</param-value>
    </context-param>


    <filter>
        <filter-name>SessionChecker</filter-name>
        <filter-class>com.ss.TIW_2021project.web.filter.SessionChecker</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SessionChecker</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/cart</url-pattern>
        <url-pattern>/orders</url-pattern>
        <url-pattern>/search/*</url-pattern>
        <url-pattern>/AddToCart</url-pattern>
        <url-pattern>/shoppingCart</url-pattern>
    </filter-mapping>

    <!--
    Dato che senza aver fatto il login l'utente non può fare nulla si è deciso di applicare il filtro
    per ogni richiesta proveniente dal web browser
    -->

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>


</web-app>